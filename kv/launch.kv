<Launch>:
    name: 'Launch Screen'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background-4.jpg'
    FloatLayout:
        Image:
            source: 'images/logo-250.png'
            size_hint: .2, .5
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        Label:
            text: 'Welcome'
            color: [0.65,0.65,0.65,1]
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            font_size: 0.5*self.height
            size_hint: 0.3, 0.1
        MDRaisedButton:
            on_release: app.root.current = 'Sign Up Screen'
            size_hint: 0.5, 0.06
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            text: 'New User'
            font_size: 0.4*self.height
            background_color: (1,0.866,0.066,0.25)

        MDRaisedButton:
            on_release: app.root.current = 'Log In Screen'
            size_hint: 0.5, 0.06
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            text: 'Exisiting User'
            font_size: 0.4*self.height
            background_color: (1,0.866,0.066,0.25)
        

        Label:
            markup: True
            text: "[b]"+"'"+root.quote+"'"+"[/b]"
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            font_size: 0.19*self.height
            size_hint: 0.3, 0.1
            halign: "center"
            color: [0.172,0.545,0.662,1]
