<Home>:
    name: 'Home Screen'
    on_pre_enter: 
        root.fetchPersonalInformation(app.root.ids.LogIn.fetchPid())
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background-4.jpg'
    GridLayout:
        cols: 2
        Button:
            text: "Who am I?"
            background_down: 'images/whoami.png'
            background_normal: 'images/whoami_hover.png'
            background_color: (0.603,0.78,0.909,1)
            on_release: 
                app.root.current = 'Who Am I Screen'
        Button:
            text: "Who are they?"
            background_down: 'images/whoarethey.png'
            background_normal: 'images/whoarethey_hover.png'
            background_color: (0,0.78,0.909,1)
        Button:
            text: "Today's Schedule"
            background_down: 'images/schedule.png'
            background_normal: 'images/schedule_hover.png'
            background_color: (0.603,0,0.909,1)
            on_release:
                app.root.current = "Schedule Screen"
        Button:
            background_down: 'images/help.png'
            background_normal: 'images/help_hover.png'
            text: "Help"
            background_color: (0.603,0.78,0,1)
        Button:
            text: "Sign out"
            background_color: (0.603,0.78,0.909,1)
        Button:
            text: 'Talk to Someone'
            background_color: (0.603,0.78,0.909,1)
            on_release: 
                app.root.current = 'Chat Screen'

