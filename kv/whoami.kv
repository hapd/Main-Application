<WhoAmI>:
    name: 'Who Am I Screen'
    on_pre_enter: root.setFields(na, age, dob)
    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            title: 'Who Am I?'
            md_bg_color: get_color_from_hex(colors['DeepPurple']['A400'])
            background_palette: 'DeepPurple'
            background_hue: 'A400'
            left_action_items: [['arrow-left', lambda x: app.setCurrentScreen(app.root, 'Home Screen')]]

        ScrollView:
            do_scroll_x: False
            MDList:
                id: ml
                OneLineListItem:
                    id: na
                    text: 'Field not set'
                    theme_text_color: 'Primary'
                OneLineListItem:
                    id: age
                    text: 'Field not set'
                    theme_text_color: 'Primary'
                OneLineListItem:
                    id: dob
                    text: 'Field not set'
                    theme_text_color: 'Primary'

    


