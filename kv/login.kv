<LogIn>:
    name: 'Log In Screen'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background-4.jpg'

    FloatLayout:

        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {"x":0, "top": 1}
            size_hint: 0.06, 0.1
            on_release: root.manager.current = "Launch Screen"

        Toolbar:
            title: " "
            pos_hint: {'top': 1, 'x': 0}
            md_bg_color: get_color_from_hex(colors['DeepPurple']['A400'])
            background_palette: 'DeepPurple'
            background_hue: 'A400'
            left_action_items: [['arrow-left', lambda x: app.setCurrentScreen(app.root, 'Launch Screen')]]


        Image:
            source: 'images/icon-patient-2.png'
            size: 128, 128
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        
        Label:
            text: 'Log In'
            color: [0.65,0.65,0.65,1]
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            font_size: 0.5*self.height
            size_hint: 0.3, 0.1

        MDTextField:
            id: pId
            multiline: False
            hint_text: 'Patient ID'
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.48}
            font_size: 0.37*self.height
            allow_copy: False
            required: True

        MDTextField:
            id: pin
            multiline: False
            password: True
            #max_text_length: 4
            hint_text: 'PIN'
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.37}
            font_size: 0.37*self.height
            allow_copy: False
            required: True

        MDLabel:
            id: login_error
            text: ' '
            pos_hint: {'center_x': 0.5, 'center_y': 0.30}
            size_hint: 0.2, 0.06
            font_size: 0.37*self.height
            font_style: 'Caption'
            theme_text_color: 'Error'

        MDRaisedButton:
            text: 'Log In'
            size_hint: 0.3, 0.06
            pos_hint: {'center_x': 0.5, 'center_y': 0.20}
            font_size: 0.1*self.height
            on_press: spinner.active = True
            on_release:
                spinner.active = True
                if(root.authenticateUser(pId.text, pin.text)[0] == True): app.root.current = 'Home Screen' 
                else: login_error.text = 'Incorrent Patient ID or PIN'


        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': 0.5, 'center_y': 0.10}
            active: False
