<LogIn>:
    name: 'Log In Screen'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background-4.jpg'

    FloatLayout:

        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {"x":0, "top": 1}
            size_hint: 0.06, 0.1
            on_release: root.manager.current = "Launch Screen"

        Image:
            source: 'images/icon-patient-2.png'
            size: 128, 128
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        
        Label:
            text: 'Log In'
            color: [0.65,0.65,0.65,1]
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            font_size: 0.5*self.height
            size_hint: 0.3, 0.1

        MDTextField:
            id: pId
            multiline: False
            hint_text: 'Patient ID'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.48}
            font_size: 0.37*self.height
            border: (3,3,3,3)
            allow_copy: False

        MDTextField:
            id: pin
            multiline: False
            password: True
            max_text_length: 4
            hint_text: 'PIN'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.37}
            font_size: 0.37*self.height
            allow_copy: False
            border: (3,3,3,3)

        MDLabel:
            id: login_error
            text: ''
            pos_hint: {'center_x': 0.5, 'center_y': 0.30}
            size_hint: 0.2, 0.06
            font_size: 0.37*self.height
            font_style: 'Caption'
            theme_text_color: 'Error'

        MDRaisedButton:
            text: 'Log In'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.23}
            font_size: 0.1*self.height
            on_release:
                if(root.authenticateUser(pId.text, pin.text) == True): app.root.current = 'Home Screen'
                else: login_error.text = 'Incorrent Patient ID or PIN'
